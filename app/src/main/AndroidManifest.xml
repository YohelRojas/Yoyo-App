<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Declarar caracterÃ­sticas de hardware -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- Declarar permisos necesarios -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YoyoApp"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".MainActivity" />

        <activity
            android:name=".InventarioActivity"
            android:exported="false" />
        <activity
            android:name=".FacturacionActivity"
            android:exported="false" />
        <activity
            android:name=".InventarioGeneralActivity"
            android:exported="false" />
        <activity
            android:name=".FacturaActivity"
            android:exported="false" />
        <activity
            android:name=".ClientesActivity"
            android:exported="false" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".ProductoGestion"
            android:exported="false" />
        <activity
            android:name=".RegisterUser"
            android:exported="false" />

        <!-- Actividad principal -->
        <activity android:name=".ProductoDetalleActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
