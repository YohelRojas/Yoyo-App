<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo_gradient"
    android:gravity="center"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/txt_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Yoyo App"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="USERNAME"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbSeguridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguridad"
            android:checked="true"
            android:buttonTint="@color/black" />

        <RadioButton
            android:id="@+id/rbCambiarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Usuario"
            android:buttonTint="@color/black" />

        <RadioButton
            android:id="@+id/rbSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:buttonTint="@color/blue" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="3"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        android:layout_gravity="center">

        <!-- Botones de opciones del menú -->
        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnClientes"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/clientes_desc"
                android:src="@drawable/ic_clientes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Clientes"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="189dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnFacturacion"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/facturacion_desc"
                android:src="@drawable/ic_facturacion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Facturación"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="177dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnProveedores"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/proveedores_desc"
                android:src="@drawable/ic_proveedores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Proveedores"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnProductos"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/productos_desc"
                android:src="@drawable/ic_productos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Productos"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnInventario"
                android:layout_width="81dp"
                android:layout_height="80dp"
                android:contentDescription="@string/inventario_desc"
                android:src="@drawable/ic_inventario" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Inventario"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="193dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnFacturas"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/facturas_desc"
                android:src="@drawable/ic_facturas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Facturas"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
