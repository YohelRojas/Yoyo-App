<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa de fondo con gradiente -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00FAFF"
                android:centerColor="#8C00FF"
                android:endColor="#00FFDE"
                android:angle="45"
                android:type="linear" />
        </shape>
    </item>

    <!-- Capa blanca en el centro -->
    <item
        android:left="16dp"
        android:right="16dp"
        android:top="100dp"
        android:bottom="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>
